<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main_graph"
    app:startDestination="@id/homeFragment">

    <fragment
        android:id="@+id/homeFragment"
        android:name="com.gabriel.wayairlinesapp.presenter.home.HomeFragment"
        android:label="fragment_home"
        tools:layout="@layout/fragment_home" >
        <action
            android:id="@+id/action_homeFragment_to_flightDetailsFragment"
            app:destination="@id/flightDetailsFragment" />
        <action
            android:id="@+id/action_homeFragment_to_tabManagerFragment"
            app:destination="@id/tabManagerFragment" />
    </fragment>
    <fragment
        android:id="@+id/flightDetailsFragment"
        android:name="com.gabriel.wayairlinesapp.presenter.details.FlightDetailsFragment"
        android:label="fragment_flight_details"
        tools:layout="@layout/fragment_flight_details" >
        <argument
            android:name="flightId"
            app:argType="integer" />
        <action
            android:id="@+id/action_flightDetailsFragment_to_homeFragment"
            app:destination="@id/homeFragment" />
    </fragment>
    <fragment
        android:id="@+id/tabManagerFragment"
        android:name="com.gabriel.wayairlinesapp.presenter.status.tabs.TabManagerFragment"
        android:label="fragment_tab_manager"
        tools:layout="@layout/fragment_tab_manager" >
        <action
            android:id="@+id/action_tabManagerFragment_to_homeFragment"
            app:destination="@id/homeFragment" />
        <action
            android:id="@+id/action_tabManagerFragment_to_flightDetailsFragment"
            app:destination="@id/flightDetailsFragment" />
    </fragment>
</navigation>