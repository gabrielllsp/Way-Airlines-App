<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main_graph"
    app:startDestination="@id/homeFragment">

    <fragment
        android:id="@+id/homeFragment"
        android:name="com.gabriel.wayairlinesapp.presenter.home.HomeFragment"
        android:label="fragment_home"
        tools:layout="@layout/fragment_home" >
        <action
            android:id="@+id/action_homeFragment_to_flightStatusFragment"
            app:destination="@id/flightStatusFragment" />
    </fragment>
    <fragment
        android:id="@+id/flightDetailsFragment"
        android:name="com.gabriel.wayairlinesapp.presenter.details.FlightDetailsFragment"
        android:label="fragment_flight_details"
        tools:layout="@layout/fragment_flight_details" >
        <argument
            android:name="flightId"
            app:argType="string" />
        <action
            android:id="@+id/action_flightDetailsFragment_to_flightStatusFragment"
            app:destination="@id/flightStatusFragment" />
    </fragment>
    <fragment
        android:id="@+id/flightStatusFragment"
        android:name="com.gabriel.wayairlinesapp.presenter.status.FlightStatusFragment"
        android:label="fragment_flight_status"
        tools:layout="@layout/fragment_flight_status" >
        <action
            android:id="@+id/action_flightStatusFragment_to_flightDetailsFragment"
            app:destination="@id/flightDetailsFragment" />
        <action
            android:id="@+id/action_flightStatusFragment_to_homeFragment"
            app:destination="@id/homeFragment" />
    </fragment>
    <fragment
        android:id="@+id/allFlightsFragment"
        android:name="com.gabriel.wayairlinesapp.presenter.status.tabs.AllFlightsFragment"
        android:label="fragment_all_flights"
        tools:layout="@layout/fragment_all_flights" >
        <action
            android:id="@+id/action_allFlightsFragment_to_flightDetailsFragment"
            app:destination="@id/flightDetailsFragment" />
    </fragment>
    <fragment
        android:id="@+id/completedFlightsFragment"
        android:name="com.gabriel.wayairlinesapp.presenter.status.tabs.CompletedFlightsFragment"
        android:label="fragment_completed_flights"
        tools:layout="@layout/fragment_completed_flights" >
        <action
            android:id="@+id/action_completedFlightsFragment_to_flightDetailsFragment"
            app:destination="@id/flightDetailsFragment" />
    </fragment>
    <fragment
        android:id="@+id/cancelledFlightsFragment"
        android:name="com.gabriel.wayairlinesapp.presenter.status.tabs.CancelledFlightsFragment"
        android:label="fragment_cancelled_flights"
        tools:layout="@layout/fragment_cancelled_flights" >
        <action
            android:id="@+id/action_cancelledFlightsFragment_to_flightDetailsFragment"
            app:destination="@id/flightDetailsFragment" />
    </fragment>
    <fragment
        android:id="@+id/flightsTravelFragment"
        android:name="com.gabriel.wayairlinesapp.presenter.status.tabs.FlightsTravelFragment"
        android:label="fragment_flights_travel"
        tools:layout="@layout/fragment_flights_travel" >
        <action
            android:id="@+id/action_flightsTravelFragment_to_flightDetailsFragment"
            app:destination="@id/flightDetailsFragment" />
    </fragment>
    <fragment
        android:id="@+id/performFragment"
        android:name="com.gabriel.wayairlinesapp.presenter.status.tabs.PerformFragment"
        android:label="fragment_perform"
        tools:layout="@layout/fragment_perform" >
        <action
            android:id="@+id/action_performFragment_to_flightDetailsFragment"
            app:destination="@id/flightDetailsFragment" />
    </fragment>
</navigation>