<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main_graph"
    app:startDestination="@id/homeFragment">

    <fragment
        android:id="@+id/homeFragment"
        android:name="com.gabriel.wayairlinesapp.presenter.home.HomeFragment"
        android:label="fragment_home"
        tools:layout="@layout/fragment_home" >
        <action
            android:id="@+id/action_homeFragment_to_flightHistoryFragment"
            app:destination="@id/flightHistoryFragment" />
        <action
            android:id="@+id/action_homeFragment_to_flightDetailsFragment"
            app:destination="@id/flightDetailsFragment" />
    </fragment>
    <fragment
        android:id="@+id/flightHistoryFragment"
        android:name="com.gabriel.wayairlinesapp.presenter.history.FlightHistoryFragment"
        android:label="fragment_flight_history"
        tools:layout="@layout/fragment_flight_history" >
        <action
            android:id="@+id/action_flightHistoryFragment_to_flightDetailsFragment"
            app:destination="@id/flightDetailsFragment" />
    </fragment>
    <fragment
        android:id="@+id/flightDetailsFragment"
        android:name="com.gabriel.wayairlinesapp.presenter.details.FlightDetailsFragment"
        android:label="fragment_flight_details"
        tools:layout="@layout/fragment_flight_details" />
</navigation>